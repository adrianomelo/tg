      <description>
      </description>
      <servlet-class>uk.ac.man.cs.img.owl.presentation.PedroServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>OWL Validation Servlet</servlet-name>
      <url-pattern>/Validator</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>OWL Patcher Servlet</servlet-name>
      <url-pattern>/Patcher</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
